<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">
    <LinearLayout
        android:id="@+id/messageLayoutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/shape_message_text_item"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/cat"
            android:scaleType="centerCrop"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp" />
        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:maxWidth="250dp"
            android:minWidth="120dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            tools:text="This is an example of text in message!!!!!" />
        <LinearLayout
            android:id="@+id/layoutFileMessage"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fileName_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                tools:text="filenaggggggggggme.zip"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:src="@drawable/ic_attach_file_black_192dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/date_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:textSize="12sp"
            tools:text="11/06/19 13:18" />
    </LinearLayout>
</FrameLayout>